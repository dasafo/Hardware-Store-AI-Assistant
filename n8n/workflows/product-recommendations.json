        400,
        180
      ]
    },
    {
      "parameters": {
        "jsCode": "// Combine product details with recommendations\nconst productDetails = $input.first().json;\nconst similarProducts = $input.last().json;\n\nconst response = {\n  product: productDetails,\n  recommendations: similarProducts,\n  metadata: {\n    timestamp: new Date().toISOString(),\n    recommendation_count: similarProducts.length || 0\n  }\n};\n\nreturn { json: response };"
      },
