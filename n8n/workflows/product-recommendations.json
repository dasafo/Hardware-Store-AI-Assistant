      "name": "Combine Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        800,
        300
      ]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{$json}}"
      },
      "id": "respond-recommendations",
      "name": "Respond with Recommendations",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
